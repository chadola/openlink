{
  "manifest_version": 3,
  "name": "Ground Link",
  "version": "1.0.0",
  "description": "浏览器本地代理 - 让 AI 访问本地文件",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://127.0.0.1:*/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["*://*/*"]
    }
  ]
}
